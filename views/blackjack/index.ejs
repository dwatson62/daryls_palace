<html ng-app="blackjack">
<head>
  <title>Blackjack</title>
  <script src="bower_components/angular/angular.js"></script>
  <link rel='stylesheet' href='bower_components/bootstrap/dist/css/bootstrap.css' />
  <link rel='stylesheet' href='/stylesheets/blackjack-style.css' />
  <script src="src/blackjack/app.js"></script>
  <script src="src/blackjack/blackjackController.js"></script>
  <script src="src/blackjack/gameFactory.js"></script>
  <script src="src/blackjack/playerFactory.js"></script>
  <script src="src/blackjack/hintFactory.js"></script>
  <script>
  </script>
</head>
<body ng-controller="BlackjackController as bjctrl" ng-init="bjctrl.initUser('<%= user.id %>', '<%= user.balance %>')">

  <a href="/">Leave Table</a>
  <div class="row">
    <div class="col-md-4">
      <center>
        <div id='player-buttons'>
          <% include buttons %>
        </div>
      </center>
      <br>
      <div class="scores" id='dealer-score' ng-model="bjctrl.dealerScore">
        {{bjctrl.dealerScore}}
      </div>
      <br><br>
      <div class="scores" id='player-score' ng-model="bjctrl.playerScore">
        {{bjctrl.playerScore}}
      </div>
    </div>
    <div class="col-md-4">
      <% include dealer %>
      <% include player %>
    </div>
    <div class="col-md-4"></div>
  </div>
</body>
</html>
