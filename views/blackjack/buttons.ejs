<button class="player-btn" id='hit-btn' ng-click="bjctrl.hit()" ng-show="bjctrl.playerTurn">Hit me</button>
<button class="player-btn" id='stand-btn' ng-click="bjctrl.stand()" ng-show="bjctrl.playerTurn">Stand</button>
